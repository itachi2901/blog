<h2>Listing articles</h2>
<button type="button" class="btn btn-default">
  <%= link_to 'New article', new_article_path %>
</button>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  </thead>
  <tbody>

  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', article_path(article) %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_article_path(article) %></button></td>
        <td>
          <button type="button" class="btn btn-danger">
            <%= link_to 'Delete', article_path(article),
                        method: :delete,
                        data: {confirm: 'Are you sure ?'}
            %>
          </button>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>